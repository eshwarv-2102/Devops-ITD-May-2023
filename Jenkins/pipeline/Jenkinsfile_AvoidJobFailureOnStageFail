pipeline {
	agent any  
	stages {
		stage('BUILD') {
			steps {
				
					sh 'sleep 5; This is the Build stage'
					
			}	
		}
		
		stage('TEST') {
			steps {
				catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
				sh '''
					pwd
					sleep 5
					echo This is the fist stage: TEST
				'''
				}
			}	
		}
		
		stage('DEPLOY') {
			steps {
				sh '''
					pwd
					sleep 5
					echo This is the fist stage: DEPLOY
				'''
			}	
		}
	}
}
